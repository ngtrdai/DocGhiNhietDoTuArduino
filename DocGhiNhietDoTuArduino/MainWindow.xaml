<Window x:Class="DocGhiNhietDoTuArduino.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocGhiNhietDoTuArduino"
        mc:Ignorable="d"
        Title="Đọc ghi dữ liệu nhiệt độ - Cảm biến và Cơ cấu chấp hành" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <GroupBox
                    Header="Nhiệt độ hiện tại"
                    Margin="3">
                    <TextBlock 
                        Name="nhietDo"
                        Text="20.6" 
                        Width="auto" 
                        Height="auto"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="120"></TextBlock>
                </GroupBox>
            </Grid>
            <Grid Grid.Row="1">
                <GroupBox Header="Thời gian hiện tại" Margin="3">
                    <StackPanel>
                        <TextBlock 
                               HorizontalAlignment="Center"
                               FontSize="40"
                               Name="realDate"
                               ></TextBlock>
                        <TextBlock 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="100"
                               Name="realTime"></TextBlock>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <GroupBox Margin="3" Header="Kết nối">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <StackPanel Orientation="Vertical">
                                <TextBlock FontSize="20" Text="Cổng:"></TextBlock>
                                <ComboBox Name="comList"></ComboBox>
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid>                             
                                <Grid.ColumnDefinitions>                                        
                                    <ColumnDefinition></ColumnDefinition>                                      
                                    <ColumnDefinition></ColumnDefinition>                                    
                                </Grid.ColumnDefinitions>                                
                                <Button Grid.Column="0" Name="btnKetNoi"  Margin="3" 
                                        Style="{StaticResource MaterialDesignRaisedButton}" 
                                        Width="200" Height="50">                                        
                                    <StackPanel Orientation="Horizontal">                                    
                                        <TextBlock Name="txbKetNoi" FontSize="30" Text="Kết nối"></TextBlock>                                        
                                        <TextBlock>                                        
                                            <materialDesign:PackIcon FontSize="30" Name="icoKetNoi" Kind="LinkVariant" />                                            
                                        </TextBlock>                                        
                                    </StackPanel>                                    
                                </Button>
                                <Button HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" FontSize="30" Content="Reset" Name="btnReset" Margin="3" Width="200" Height="50" Background="Red">
                                </Button>
                            </Grid>                                    
                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <TextBlock Text="Trạng thái:"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="30"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBlock Name="trangThaiKetNoi"
                                    Text="Chưa kết nối"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="25"
                                   Foreground="Red"></TextBlock>
                            </Grid>
                        </Grid>
                    </Grid>
                </GroupBox>
            </Grid>
            <Grid Grid.Row="1">
                <Border
                    
                    Background="{DynamicResource MaterialDesignBackground}">
                    <GroupBox    
                        Header="Đồ thị theo thời gian thực"   
                        Style="{DynamicResource MaterialDesignGroupBox}"    
                        Margin="3"    
                        UseLayoutRounding="True"    
                        SnapsToDevicePixels="True">                   
                        <TextBlock>    
                            Cập nhật sau                   
                        </TextBlock>                    
                    </GroupBox>               
                </Border>
            </Grid>
        </Grid>
        
    </Grid>
</Window>
