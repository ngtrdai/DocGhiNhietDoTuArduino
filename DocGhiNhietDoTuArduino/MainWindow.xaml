<Window x:Class="DocGhiNhietDoTuArduino.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="Black"
        FontFamily="{DynamicResource MaterialDesignFont}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocGhiNhietDoTuArduino"
        mc:Ignorable="d"
        Title="Đọc ghi dữ liệu môi trường - Cảm biến và Cơ cấu chấp hành" 
        Height="800" Width="1400" 
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <!-- PHẦN MỀM ĐỌC GHI DỮ LIỆU MÔI TRƯỜNG - CẢM BIẾN VÀ CƠ CẤU CHẤP HÀNH -->
    <!-- Author: ngtrdai - Ver: v1.2 - 2021 -->
    <Window.ContextMenu>
        <ContextMenu Placement="Center"/>
    </Window.ContextMenu>
    <Grid>
        <!-- Chia hàng chính -->
        <Grid.RowDefinitions>
            <!-- Row Header -->
            <RowDefinition Height=".08*"></RowDefinition>
            <!-- Row Body -->
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <!--Header -->
        <materialDesign:ColorZone  Grid.Row="0" 
            Mode="Inverted"  
            Padding="10">
            <materialDesign:ColorZone.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Red"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </materialDesign:ColorZone.Background>
                <!-- Title -->       
                       <TextBlock VerticalAlignment="Center"					
								  HorizontalAlignment="Center"                       
								  Margin="5 0 0 0" 						
								  FontSize="30"						
								  FontWeight="Bold"						
								  FontFamily="Calibri">THÔNG SỐ MÔI TRƯỜNG</TextBlock>
        </materialDesign:ColorZone>
        <!-- Body -->
        <Grid Grid.Row="1">
            <!-- Chia cột body -->
            <Grid.ColumnDefinitions>
                <!-- Cột hiển thị -->
                <ColumnDefinition></ColumnDefinition>
                <!-- Cột dữ liệu -->
                <ColumnDefinition Width=".45*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <!-- Hiển thị -->
            <Grid Grid.Column="0">
                <!-- Chia hàng cho cột hiển thị -->
                <Grid.RowDefinitions>
                    <!-- Hàng: Nhiệt độ & độ ẩm -->
                    <RowDefinition></RowDefinition>
                    <!-- Hàng: Không khí & cài dặt nhiệt độ -->
                    <RowDefinition></RowDefinition>
                    <!-- Hàng đồ thị -->
                    <RowDefinition Height="1.5*"></RowDefinition>
                </Grid.RowDefinitions>
                <!-- Hàng: Nhiệt độ & độ ẩm -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <!-- Cột nhiệt độ -->
                        <ColumnDefinition></ColumnDefinition>
                        <!-- Cột độ ẩm -->
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!-- Cột nhiệt độ -->
                    <Grid Grid.Column="0">
                        <materialDesign:Card  
                            Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"  
                            Width="auto"
                            Margin="20"
                            Padding="10"  
                            UniformCornerRadius="6">
                            <materialDesign:Card.Background>
                                <LinearGradientBrush EndPoint="0.5,1" 
													 StartPoint="0.5,0">
                                    <GradientStop Color="Red" 
												  Offset="0"/>
                                    <GradientStop Color="#FF861E1E" 
												  Offset="1"/>
                                </LinearGradientBrush>
                            </materialDesign:Card.Background>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height=".7*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width=".8*"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
											   Text="NHIỆT ĐỘ" 
											   Margin="0 5 0 0"
                                               FontWeight="Bold"
											   FontSize="35"></TextBlock>
                                    <TextBlock x:Name="nhietDo" 
											   Grid.Column="1" 
											   Text="" 
											   FontSize="90" 
											   HorizontalAlignment="Center" 
											   VerticalAlignment="Center" 
											   Margin="3"></TextBlock>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
											   VerticalAlignment="Center" 
											   FontSize="35">(Đơn vị: °C)</TextBlock>
                                    <materialDesign:PackIcon Kind="WhiteBalanceSunny" 
															 Grid.Column="1" 
															 Height="61"  
															 Width="113" 
															 RenderTransformOrigin="0.853,0.561" 
															 Foreground="Yellow" 
															 Margin="97.6,0,-0.2,0"/>
                                </Grid>
                            </Grid>
                        </materialDesign:Card>
                    </Grid>
                    <Grid Grid.Column="1">
                        <materialDesign:Card  
                            Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"  
                            Width="auto"
                            Margin="0 20 10 20"
                            Padding="10"  
                            UniformCornerRadius="6">
                            <materialDesign:Card.Background>
                                <LinearGradientBrush EndPoint="0.5,1" 
													 StartPoint="0.5,0">
                                    <GradientStop Color="#FF003AFF" 
												  Offset="0"/>
                                    <GradientStop Color="#FF1C0E7A" 
												  Offset="1"/>
                                </LinearGradientBrush>
                            </materialDesign:Card.Background>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height=".7*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width=".8*"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
											   Text="ĐỘ ẨM" 
                                               FontWeight="Bold"
											   Margin="0 5 0 0" 
											   FontSize="35"></TextBlock>
                                    <TextBlock Name="doAm" 
											   Grid.Column="1" 
											   Text="" 
											   FontSize="90" 
											   HorizontalAlignment="Center" 
											   VerticalAlignment="Center" 
											   Margin="3"></TextBlock>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
											   VerticalAlignment="Center" 
											   FontSize="35">(Đơn vị: %)</TextBlock>
                                    <materialDesign:PackIcon Kind="WeatherRainy" 
															 Grid.Column="1" 
															 Height="61"  
															 Width="113" 
															 RenderTransformOrigin="0.853,0.561" 
															 Foreground="White" 
															 Margin="97.6,0,-0.2,0"/>
                                </Grid>
                            </Grid>
                        </materialDesign:Card>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <materialDesign:Card  
                            Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"  
                            Width="auto"
                            Margin="20 10 20 20"
                            Padding="10"  
                            UniformCornerRadius="6">
                            <materialDesign:Card.Background>
                                <LinearGradientBrush EndPoint="0.5,1" 
													 StartPoint="0.5,0">
                                    <GradientStop Color="#FF00FF0C" 
												  Offset="0"/>
                                    <GradientStop Color="#FF00571D" 
												  Offset="1"/>
                                </LinearGradientBrush>
                            </materialDesign:Card.Background>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height=".7*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
											   Text="KHÔNG KHÍ" 
                                               FontWeight="Bold"
											   Margin="0 5 0 0" 
											   FontSize="35"></TextBlock>
                                    <TextBlock x:Name="khongKhi" 
											   Grid.Column="1" Text="" 
											   FontSize="90" 
											   HorizontalAlignment="Center" 
											   VerticalAlignment="Center" 
											   Margin="3"></TextBlock>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
											   VerticalAlignment="Center" 
											   FontSize="34">(Đơn vị: PPM)</TextBlock>
                                    <materialDesign:PackIcon Kind="Run" 
															 Grid.Column="1" 
															 Height="61"  
															 Width="113" 
															 RenderTransformOrigin="0.853,0.561" 
															 Foreground="White" 
															 Margin="97.6,0,-0.2,0"/>
                                </Grid>
                            </Grid>
                        </materialDesign:Card>
                    </Grid>
                    <Grid Grid.Column="1">
                        <materialDesign:Card Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
											 Width="auto"                            
											 Margin="0 10 10 20"                            
											 Padding="10"                            
											 UniformCornerRadius="6">
                            <materialDesign:Card.Background>
                                <LinearGradientBrush EndPoint="0.5,1" 
													 StartPoint="0.5,0">
                                    <GradientStop Color="Red" 
												  Offset="0"/>
                                    <GradientStop Color="#FF861E1E" 
												  Offset="1"/>
                                </LinearGradientBrush>
                            </materialDesign:Card.Background>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height=".7*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <StackPanel Orientation="Horizontal" 
											Grid.Row="0">
                                    <TextBlock Foreground="White" 
											   FontSize="50" 
											   FontWeight="Bold" 
											   VerticalAlignment="Center">PORT:</TextBlock>
                                    <ComboBox FontSize="30" 							  
                                              Name="comList" Margin="10"							  
                                              Width="280"							  
                                              Height="40" 
                                              Foreground="Black"
                                              Background="{x:Null}"></ComboBox>
                                </StackPanel>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="btnKetNoi" 
											Grid.Row="0"							            
											Content="KẾT NỐI"						            
											Width="auto" 							            
											Height="55" 							           
											FontSize="25" 							            
											Margin="0" 							            
											BorderBrush="{x:Null}" 							            
											Click="btnKetNoi_Click"							            
											ToolTip="Kết nối với cổng COM đã chọn.">
                                        <Button.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="Red" Offset="0"/>
                                                <GradientStop Color="#FF400A0A" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Button.Background>
                                    </Button>
                                    <materialDesign:Card Grid.Column="1" 
                                                         Background="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"                                          
                                                         Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"                                          
                                                         Width="50"                                        
                                                         Height="50"                                        
                                                         UniformCornerRadius="6">
                                        <materialDesign:PackIcon Kind="LinkVariantOff" x:Name="trangThaiKetNoi"	 														        
                                                                 Foreground="White"
                                                                 Height="auto"
                                                                 Width="auto"/>
                                    </materialDesign:Card>
                                </Grid>                                
                            </Grid>
                        </materialDesign:Card>
                    </Grid>
                </Grid>
                <materialDesign:Card Grid.Row="2"
									 materialDesign:ShadowAssist.ShadowDepth="Depth1"
									 Padding="2" 
									 Margin="10 0 10 10" 
									 Background="Black">
                    <lvc:CartesianChart Series="{Binding SeriesCollection}" 
										LegendLocation="Right" 
										Name="DoThi" 
										Foreground="White" >
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Foreground="White" 
									  Title="Mẫu thu nhập" FontSize="15"
                                      LabelFormatter="{Binding YFormatter}"/>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Foreground="White" 
									  Title="Nhiệt độ/Độ ẩm" FontSize="15" 
									  LabelFormatter="{Binding YFormatter}"></lvc:Axis>
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </materialDesign:Card>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height=".1*"></RowDefinition>
                    <RowDefinition Height=".2*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" 
					  Margin="0 9 10 0" 
					  Background="Black">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="197*"/>
                        <RowDefinition Height="306*"/>
                    </Grid.RowDefinitions>
                    <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth1"
										 Padding="2"
										 Margin="0,10,0,0" 
										 Background="Black" Grid.RowSpan="2">
                        <TabControl BorderBrush="{x:Null}" Background="Black">
                            <TabControl.Resources>
                                <Style TargetType="TabItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TabItem">
                                                <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                                    <ContentPresenter x:Name="ContentSite"                                        
																	  VerticalAlignment="Center"                                        
																	  HorizontalAlignment="Center"                                        
																	  ContentSource="Header"                                        
																	  Margin="10,2"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="False">
                                                        <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TabControl.Resources>
                            <TabItem Header="Dữ liệu" BorderBrush="{x:Null}" Background="White">
                                    <DataGrid Name="dataGrid"  								            
											  Foreground="#DD000000" 								      
											  Background="White">
                                        <DataGrid.BorderBrush>
                                            <LinearGradientBrush EndPoint="0.5,1" 
																 StartPoint="0.5,0">
                                                <GradientStop Color="Black" 
															  Offset="0"/>
                                                <GradientStop Color="White" 
															  Offset="1"/>
                                            </LinearGradientBrush>
                                        </DataGrid.BorderBrush>
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Ngày" 
																Binding="{Binding cNgay}" />
                                            <DataGridTextColumn Header="Thời gian" 
																Binding="{Binding cThoiGian}" />
                                            <DataGridTextColumn Header="Nhiệt độ" 
																Binding="{Binding cNhietDo}" />
                                            <DataGridTextColumn Header="Độ Ẩm" 
																Binding="{Binding cDoAm}" />
                                            <DataGridTextColumn Header="Không Khí" 
																Binding="{Binding cKhongKhi}" />
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </TabItem>
                            <TabItem Header="Cài đặt" Background="White" BorderBrush="{x:Null}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="2*"></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <materialDesign:Card  Grid.Row="0"
                                                          Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                                                          Padding="3"  
                                                          UniformCornerRadius="6">
                                        <materialDesign:Card.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" 
																 StartPoint="0.5,0">
                                                <GradientStop Color="Black" 
															  Offset="0"/>
                                                <GradientStop Color="Red" 
															  Offset="1"/>
                                            </LinearGradientBrush>
                                        </materialDesign:Card.Background>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <DockPanel Grid.Row="0" Margin="10 20 10 0">
                                                <TextBlock Text="Baudrate:" 
														   VerticalAlignment="Center" 
														   FontSize="30" 
														   FontWeight="Bold"></TextBlock>
                                                <ComboBox Name="comBaudrate" 
														  Height="40" 
														  FontSize="30"></ComboBox>
                                            </DockPanel>
                                            <DockPanel Grid.Row="1" Margin="10 0 10 20">
                                                <TextBlock Text="Tốc độ lấy mẫu:" 
														   VerticalAlignment="Center" 
														   FontSize="30" 
														   FontWeight="Bold"></TextBlock>
                                                <ComboBox Name="comTocDo" 
														  Height="40" 
														  FontSize="30"></ComboBox>
                                            </DockPanel>
                                        </Grid>
                                    </materialDesign:Card>
                                    <materialDesign:Card Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}" Grid.Row="1"  
                                                         Width="auto" Margin="0 10 0 3"
                                                         Padding="10"
                                                         UniformCornerRadius="6">
                                        <materialDesign:Card.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" 													 
																 StartPoint="0.5,0">
                                                <GradientStop Color="#FF593114" 												  
															  Offset="0"/>
                                                <GradientStop Color="#FFC81414"  												  
															  Offset="0.997"/>
                                            </LinearGradientBrush>
                                        </materialDesign:Card.Background>
                                        <Grid>
                                            <TextBlock FontSize="30" 
													   FontWeight="Bold" 
													   Text="Cài đặt t°:"></TextBlock>
                                            <ComboBox Margin="0 30 0 0" FontSize="30" 												  
													  Name="cbbNhietDo" 												  
													  Grid.Column="1" 												  
													  Height="40"></ComboBox>
                                        </Grid>                                        
                                    </materialDesign:Card>
                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0"
                                                Name="btnCaiDat"
                                                Click="thietDat"
                                                Margin="0 0 0 0"
                                                Height="65"
                                                Content="Cài đặt"
                                                FontSize="30"
                                                FontWeight="DemiBold" BorderBrush="{x:Null}">
                                            <Button.Background>
                                                <LinearGradientBrush EndPoint="0.5,1" 
																	 StartPoint="0.5,0">
                                                    <GradientStop Color="Red" 
																  Offset="0"/>
                                                    <GradientStop Color="#FF400A0A"
																  Offset="1"/>
                                                </LinearGradientBrush>
                                            </Button.Background>
                                        </Button>
                                        <Button Grid.Column="1" 
                                                Name="btnKhoiPhuc"
                                                Click="huyThietDat"
                                                Height="65"
                                                Margin="10 0 0 0"
                                                Content="Khôi phục"
                                                FontSize="30"
                                                FontWeight="DemiBold" 
												BorderBrush="{x:Null}">
                                            <Button.Background>
                                                <LinearGradientBrush EndPoint="0.5,1" 													 
																	 StartPoint="0.5,0">
                                                    <GradientStop Color="#FF0D07FD" 												  
																  Offset="0"/>
                                                    <GradientStop Color="#FF0A092B" 												  
																  Offset="1"/>
                                                </LinearGradientBrush>
                                            </Button.Background>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </TabItem>
                            <TabItem Header="Hướng dẫn" BorderBrush="{x:Null}" >
                                <materialDesign:Card Width="auto">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="140" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Image Margin="10"                                                 
											   Source="Resources/img/LogoPNG.png"                                                
											   Stretch="Uniform" />
                                        <Button Name="btnOpenVideoHDSD" 
												Click="btnOpenVideoHDSD_Click"                                              
												Grid.Row="0"                                                  
												Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"                                             
												HorizontalAlignment="Right"                                                 
												VerticalAlignment="Bottom"                                                  
												Margin="0 0 16 -20" 
												Background="White" 
												BorderBrush="White">
                                            <materialDesign:PackIcon HorizontalAlignment="Center" 
																	 VerticalAlignment="Center"                                                 
																	 Kind="Play" 
																	 Height="40" 
																	 Width="40" />
                                        </Button>
                                        <Grid Grid.Row="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="0.2*"></RowDefinition>
                                                <RowDefinition Height="auto"></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" 
													   VerticalAlignment="Center"                                                  
													   FontWeight="Bold" 
													   HorizontalAlignment="Center"
													   Text="HƯỚNG DẪN SỬ DỤNG PHẦN MỀM"></TextBlock>
                                            <TextBlock Grid.Row="1"  Margin="10 0"                                                      
													   TextWrapping="Wrap"                                                        
													   VerticalAlignment="Center">
												Bước 1: Chọn cổng kết nối và nhấn kết nối.
                                                <LineBreak></LineBreak>
                                                Bước 2: Dữ liệu sẽ tự được thu nhập.
                                                <LineBreak></LineBreak>
                                                Bước 3: Nhấn ngắt kết nối và nhấn xuất dữ liệu.
                                                <LineBreak></LineBreak>
                                                Bước 4: Nhấn lưu đồ thị để xuất đồ thị.
                                            </TextBlock>
                                        </Grid>
                                        <StackPanel HorizontalAlignment="Right"                                                  
													Grid.Row="2"                                                  
													Orientation="Horizontal"                                               
													Margin="8">
                                            <TextBlock Text="Phiên bản: v1.2 - 2021"></TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </materialDesign:Card>
                            </TabItem>
                            <TabItem Header="Thông tin" BorderBrush="{x:Null}" >
                                <TabItem.Background>
                                    <LinearGradientBrush EndPoint="0,1" 
														 StartPoint="0,0">
                                        <GradientStop Color="#FFF0F0F0" 
													  Offset="0"/>
                                        <GradientStop Color="White" 
													  Offset="1"/>
                                    </LinearGradientBrush>
                                </TabItem.Background>
                                <materialDesign:Card Width="auto">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="140" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Image Margin="10"                                                
											   Source="Resources/img/LogoPNG.png"                                               
											   Stretch="Uniform" />
                                        <Button Name="btnOpenGithub" Click="btnOpenGithub_Click"                                            
												Grid.Row="0"                                                  
												Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"                                                  
												HorizontalAlignment="Right"                                                 
												VerticalAlignment="Bottom"                                                  
												Margin="0 0 16 -20" Background="White" BorderBrush="White">
                                            <materialDesign:PackIcon HorizontalAlignment="Center" 
																	 VerticalAlignment="Center"                                                 
																	 Kind="Github" 
																	 Height="40" 
																	 Width="40" /></Button>
                                        <Grid Grid.Row="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="0.2*"></RowDefinition>
                                                <RowDefinition Height="auto"></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" 
													   VerticalAlignment="Center"                                                      
													   FontWeight="Bold" 
													   HorizontalAlignment="Center"
													   Text="PHẦN MỀM ĐỌC GHI NHIỆT ĐỘ MÔI TRƯỜNG">                                                  
